<p style="color: green"><%= notice %></p>

<%= render @post %>

1 Star - <%= @rating.s1 %><br>
2 Star - <%= @rating.s2 %><br>
3 Star - <%= @rating.s3 %><br>
4 Star - <%= @rating.s4 %><br>
5 Star - <%= @rating.s5 %><br>
<br>
Average - <%= @rating.average %><br><br>

<%= form_with(url: "/posts/ratings", method: :post) do |form| %>
  <%= form.radio_button :rating, "1" %>
  <%= form.radio_button :rating, "2" %>
  <%= form.radio_button :rating, "3" %>
  <%= form.radio_button :rating, "4" %>
  <%= form.radio_button :rating, "5" %>
  <%= form.text_field :post_id, value: @post.id %>
  <%= form.submit %>
<% end %>

<div>
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %>

  <%= button_to "Destroy this post", @post, method: :delete %>
</div>
